<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    @*<script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>

        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>*@

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
    </style>
</head>
<body>



    <nav class="navbar navbar-expand-lg navbar-light bg-primary  ">
        <a class="navbar-brand" href="#">myContacts v1.0</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse  justify-content-end" id="navbarNavAltMarkup">



            <ul class="nav justify-content-end" style="color:black">
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Index", "Contact", "", new {style="color:black", @class = "nav-item nav-link active" })
                </li>
                <li class="nav-item">

                    @if (Session["username"] != null)
                    {



                        <a class="nav-item nav-link ">Welcome,@Session["username"]</a>
                    }
                </li>

                <li class="nav-item">
                    @Html.ActionLink("Exit", "Exit", "Login", "", new { style = "color:black", @class = "nav-item nav-link disabled" })
                </li>
            </ul>




        </div>

    </nav>






    <div class=" body-content">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>
                &copy; @DateTime.Now.Year - myContacts v1.0
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>





</html>

