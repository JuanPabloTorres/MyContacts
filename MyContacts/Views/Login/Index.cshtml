@model MyContacts.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")



}

@section scripts
{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>








}



<style>


    .wrapper {
        text-align: left;
        background: linear-gradient(to bottom, #22c1c3 0%, #2d57fd 100%);
        height: 100%;
        width: 100%;
        position: relative
    }


    .subWrapper {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
    }


    .modalP {
        position: fixed;
        z-index: 999;
        height: 100%;
        width: 100%;
        top: 0;
        background-color: Black;
        filter: alpha(opacity=60);
        opacity: 0.6;
        display: none;
    }

    .innerContainer {
        border: solid 1px #55555b;
        margin: auto;
        padding: 20px;
        width: 300px;
        border-radius: 5px;
        height: 320px;
        background-color: whitesmoke;
        box-shadow: 5px 10px #55555b;
    }


    .spinnerImg {
        width: 80px;
        display: none;
    }


    .center {
        z-index: 1000;
        margin: 50px auto;
        padding: 10px;
        width: 130px;
        background-color: White;
        border-radius: 10px;
        filter: alpha(opacity=100);
        opacity: 1;
    }

    .centerimg {
        height: 128px;
        width: 128px;
    }
</style>


@Html.Partial("_RegisterPartial", new MyContacts.ViewModels.ContactViewModel())





<div class="wrapper">


    <div class="subWrapper">


        <div class="innerContainer">






            @*@using (Html.BeginForm("Index", "Login", FormMethod.Post))*@
            @using (Ajax.BeginForm("Index", "Login", new AjaxOptions()
            {
                HttpMethod = "POST",
                InsertionMode = InsertionMode.Replace,
                LoadingElementId = "progress",


            }))
            {




                <h1 class="text-center">Welcome</h1>

                <hr style="border-top: 1px solid gray;" />

                @Html.ValidationSummary(true, "", new { @class = "text-danger " })

                <div class="form-group">

                    <label><b>User Name:</b></label>

                    <input class="form-control" id="Username" name="Username" type="text" value="" style="box-shadow: 2.5px 1.5px lightgrey;" />

                    @*@Html.TextBoxFor(m => m.Username, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })*@

                    @Html.ValidationMessageFor(model => model.Username)


                </div>


                <div class="form-group" id="btnId">



                    <input type="submit" class="shadow-lg p-3 mb-5 bg-white rounded  btn btn-primary btn-block " value="Login" style="box-shadow: 10px 10px 5px lightgrey;" />




                    <button type="button" class=" btn btn-warning btn-block" data-toggle="modal" data-target="#registerModal" style="box-shadow: 10px 10px 5px lightgrey;">Register</button>



                </div>



                <div id="progress" class="modalP">
                    <div class="center">

                        <img src="~/Content/Images/Spinner.gif" alt="" style="width:100px;height:100px;display:none" id="loadingSpinner" />
                    </div>
                </div>

            }



        </div>


    </div>



</div>
















